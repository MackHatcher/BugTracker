                        {
                            <li>
                                <a href="@Url.Action("Login", "Account")"><i class="fa fa-user fa-fw"></i> Sign In</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Register", "Account")"><i class="fa fa-gear fa-fw"></i> Register</a>
                            </li>
                            <li class="divider"></li>
                        }
