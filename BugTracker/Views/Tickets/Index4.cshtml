@{
    ViewBag.Title = "Index4";
}

<h2>Index4</h2>

@using PagedList;
@using PagedList.Mvc;
<link href="jquery.dataTables.min.css" />

@model IEnumerable<BugTracker.Models.Ticket>


@using (Html.BeginForm())
{
    <input type="text" name="searchString" class="search" placeholder="Search posts" value="@ViewBag.SearchString" />
    <input type="submit" class="btn-primary-search" value="search" />
}

<h2>Index</h2>

<table id="mytable" class="table">
  <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Created)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Updated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketPriority)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TicketType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Project)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketPriority.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketStatus.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TicketType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @if (User.IsInRole("Developer"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                }
                |
                @if (User.IsInRole("Project Manager"))
                {
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                }
                |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @if (User.IsInRole("Project Manager"))
                {
                    @Html.ActionLink("Assign", "AssignUsers", new { id = item.Id })
                }
                |


            </td>
        </tr>
    }
    </tbody>
</table>

<link href="jquery.min.js" />
<link href="jquery.dataTables.min.js" />
@section scripts {
    <script>

        $('#mytable').DataTable();
    </script>
}